<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.WelcomeController">
   <children>
      <ImageView fx:id="image" fitHeight="700.0" fitWidth="1286.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Files/ucl.jpg" />
         </image></ImageView>
      <Label layoutX="450.0" layoutY="294.0" prefHeight="112.0" prefWidth="421.0" text="Welcome to UEFA Champions League  " textFill="WHITE">
         <font>
            <Font name="Maiandra GD" size="24.0" />
         </font>
      </Label>
      <Label layoutX="450.0" layoutY="370.0" prefHeight="112.0" prefWidth="421.0" text="Press Enter to Continue..........." textFill="WHITE">
         <font>
            <Font name="Maiandra GD" size="24.0" />
         </font>
      </Label>
      <Button fx:id="Submit" layoutX="614.0" layoutY="521.0" mnemonicParsing="false" onAction="#submit" prefHeight="39.0" prefWidth="93.0" style="-fx-background-radius: 100;" text="Enter">
         <font>
            <Font name="Maiandra GD" size="14.0" />
         </font>
      </Button>
      <Button fx:id="soundButton" layoutX="231.0" layoutY="528.0" mnemonicParsing="false" onAction="#playSound" prefHeight="39.0" prefWidth="190.0" style="-fx-background-radius: 100;" text="PlaySound">
         <font>
            <Font name="Maiandra GD" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
